{% comment %}
  Section: main-product.liquid
  Description: Main product section with Swiper gallery and color filtering
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- assign current_variant = product.selected_or_first_available_variant -%}

<section class="section-{{ section.id }}-padding">
  <div class="product-main page-width">
    <div class="product-main__container">
      <div class="grid grid--1-col product-main__grid{% if product.media.size > 0 %} grid--2-col-tablet{% else %} product-main__grid--no-media{% endif %}">
        
        <!-- Product Media / Gallery -->
        <div class="grid__item product-main__media">
          {% render 'product-gallery', 
             product: product, 
             section: section, 
             current_variant: current_variant %}
        </div>

        <!-- Product Information -->
        <div class="grid__item product-main__info">
          <div class="product-info" id="ProductInfo-{{ section.id }}">
            
            <!-- Product Title -->
            <h1 class="product-info__title h1">
              {{ product.title | escape }}
            </h1>

            <!-- Product Price -->
            <div class="product-info__price no-js-hidden" id="price-{{ section.id }}" role="status" {{ block.shopify_attributes }}>
              {%- render 'price', product: product, use_variant: true, show_badges: true, price_class: 'price--large' -%}
            </div>

            <!-- Product Form -->
            {%- form 'product', product, id: 'product-form-installment', class: 'installment caption-large' -%}
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              {{ form | payment_terms }}
            {%- endform -%}

            <!-- Product Variants (including Color Switcher) -->
            {% render 'product-variant-picker', product: product, block: block, product_form_id: product_form_id %}

            <!-- Product Form -->
            <div class="product-form">
              {%- assign product_form_id = 'product-form-' | append: section.id -%}

              {% render 'product-form', 
                 product: product, 
                 current_variant: current_variant, 
                 product_form_id: product_form_id, 
                 section_id: section.id %}
            </div>

            <!-- Product Description -->
            {%- if product.description != blank -%}
              <div class="product-info__description rte">
                {{ product.description }}
              </div>
            {%- endif -%}

            <!-- Additional Product Details -->
            <div class="product-details">
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'collapsible_tab' -%}
                    <div class="product-details__item" {{ block.shopify_attributes }}>
                      {% render 'collapsible-content', 
                         content: block.settings.content, 
                         heading: block.settings.heading, 
                         icon: block.settings.icon, 
                         open: block.settings.open %}
                    </div>

                  {%- when 'text' -%}
                    <div class="product-details__item product-details__item--text" {{ block.shopify_attributes }}>
                      <h3>{{ block.settings.text_heading | escape }}</h3>
                      <div class="rte">
                        {{ block.settings.text }}
                      </div>
                    </div>

                  {%- when 'share' -%}
                    <div class="product-details__item" {{ block.shopify_attributes }}>
                      {% render 'share-button', block: block %}
                    </div>

                {%- endcase -%}
              {%- endfor -%}
            </div>

            <!-- Color Switcher (if color variants exist) -->
            {% render 'color-switcher', product: product, section: section %}

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

{%- if product.selected_or_first_available_variant.featured_media -%}
  {%- assign seo_media = product.selected_or_first_available_variant.featured_media -%}
{%- else -%}
  {%- assign seo_media = product.featured_media -%}
{%- endif -%}

<script type="application/ld+json">
  {
    "@context": "http://schema.org/",
    "@type": "Product",
    "name": {{ product.title | json }},
    "url": {{ request.origin | append: product.url | json }},
    {% if seo_media -%}
      "image": [
        {{ seo_media | img_url: '1920x' | prepend: "https:" | json }}
      ],
    {%- else -%}
      "image": [
        {{ product.featured_media | img_url: '1920x' | prepend: "https:" | json }}
      ],
    {%- endif %}
    "description": {{ product.description | strip_html | json }},
    {% if product.selected_or_first_available_variant -%}
      "sku": {{ product.selected_or_first_available_variant.sku | json }},
      "mpn": {{ product.selected_or_first_available_variant.id | json }},
    {%- endif %}
    "brand": {
      "@type": "Brand",
      "name": {{ product.vendor | json }}
    },
    "offers": [
      {%- for variant in product.variants -%}
        {
          "@type" : "Offer",
          {%- if variant.sku != blank -%}
            "sku": {{ variant.sku | json }},
          {%- endif -%}
          "availability" : "http://schema.org/{% if variant.available %}InStock{% else %}OutOfStock{% endif %}",
          "price" : {{ variant.price | divided_by: 100.00 | json }},
          "priceCurrency" : {{ cart.currency.iso_code | json }},
          "url" : {{ request.origin | append: variant.url | json }}
        }{% unless forloop.last %},{% endunless %}
      {%- endfor -%}
    ]
  }
</script>

